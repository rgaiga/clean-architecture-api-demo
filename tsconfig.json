{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./",
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@data/*": ["./src/data/*"],
            "@domain/*": ["./src/domain/*"],
            "@infra/*": ["./src/infra/*"],
            "@main/*": ["./src/main/*"],
            "@presentation/*": ["./src/presentation/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "include": ["./jest.config.ts", "./__tests__/**/*", "./src/**/*"]
}
